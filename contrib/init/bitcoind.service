[Unit]
Description=Anzucoin's distributed currency daemon
After=network.target

[Service]
User=anzucoin
Group=anzucoin

Type=forking
PIDFile=/var/lib/anzucoind/anzucoind.pid
ExecStart=/usr/bin/anzucoind -daemon -pid=/var/lib/anzucoind/anzucoind.pid \
-conf=/etc/anzucoin/anzucoin.conf -datadir=/var/lib/anzucoind -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
